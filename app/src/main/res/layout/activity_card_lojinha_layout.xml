<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".CardLojinhaActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="350dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/acessorios_m" />


            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/rubikvariablefont_wght"
                android:text="Lojinha do Catarina"
                android:textColor="#FFF"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtDescricao"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTitulo"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="Tudo e mais um pouco para te proporcionar o melhor do cafÃ©."
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompreAgora"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDescricao"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="Compre Agora"
                android:textColor="#FFF" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>